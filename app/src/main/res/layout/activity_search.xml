<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yoflying.drivingschool.admin.search.SearchActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:background="@color/colorPrimary"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/search_return"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_gravity="center"
           android:layout_marginLeft="10dp"
           android:src="@drawable/icon_return"/>
       <ImageView
           android:id="@+id/search_img"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/search_icon"
           android:layout_gravity="center"
           android:layout_marginLeft="20dp"
           />
       <EditText
           android:id="@+id/search_edit_etv"
           android:layout_width="200dp"
           android:layout_height="match_parent"
           android:layout_gravity="center"
           android:layout_marginLeft="15dp"
           android:hint="@string/input_name"
           android:textColorHint="@color/search_hint_color"
           android:textColor="@color/white"
           android:textCursorDrawable="@drawable/color_cursor"
           android:background="@null"
           />
   </LinearLayout>
        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/search_teacher_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_teacher"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_cardview">

            </View>
            <LinearLayout
                android:id="@+id/search_student_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_teacher"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/search_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_result_rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
